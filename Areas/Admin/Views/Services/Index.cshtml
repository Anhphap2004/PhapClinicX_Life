@model IEnumerable<PhapClinicX.Models.Service>

@{
    ViewData["Title"] = "Danh sách dịch vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-primary"><i class="bi bi-list-ul"></i> Danh Sách Dịch Vụ</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Thêm Dịch Vụ</a>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>Tên Dịch Vụ</th>
                <th>Trạng Thái</th>
                <th>Hình Ảnh</th>
                <th>Chi Tiết</th>
                <th class="text-center">Hành Động</th>
            </tr>
        </thead>
        @{
            int p = 1;

        }
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(p++)</td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceName)</td>
                  
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Không hoạt động</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Image))
                        {
                            <img src="~/assets/img/services/@item.Image" alt="Hình ảnh" class="img-thumbnail" style="max-width: 100px;">
                        }
                        else
                        {
                            <span class="text-muted">Chưa có hình</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Detail)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-info btn-sm"><i class="bi bi-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
