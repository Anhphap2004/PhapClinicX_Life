@model PhapClinicX.Models.Discount

@{
    ViewData["Title"] = "Chi tiết mã giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card shadow p-4">
    <h4 class="text-secondary">Thông tin chi tiết</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Tên mã giảm giá:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DiscountName)</dd>

        <dt class="col-sm-3 fw-bold">Phần trăm giảm:</dt>
        <dd class="col-sm-9">@Model.DiscountPercent.ToString("0.##") %</dd>

        <dt class="col-sm-3 fw-bold">Hình ảnh:</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/assets/img/voucher/@Model.Image" class="img-thumbnail" width="150" />
            }
            else
            {
                <span class="text-muted">Chưa có ảnh</span>
            }
        </dd>

        <dt class="col-sm-3 fw-bold">Ngày bắt đầu:</dt>
        <dd class="col-sm-9">@Model.StartDate.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3 fw-bold">Ngày kết thúc:</dt>
        <dd class="col-sm-9">@Model.EndDate.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3 fw-bold">Trạng thái:</dt>
        <dd class="col-sm-9">
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Đang áp dụng</span>
            }
            else
            {
                <span class="badge bg-danger">Ngừng áp dụng</span>
            }
        </dd>
        <dt class="col-sm-3 fw-bold">Thông tin chi tiết:</dt>
        <dd class="col-sm-9">@Html.Raw(Model.Detail)</dd>
    </dl>
</div>

<div class="d-flex justify-content-between mt-3 mb-3">
    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
    <a asp-action="Edit" asp-route-id="@Model?.DiscountId" class="btn btn-primary">✏ Chỉnh sửa</a>
</div>
