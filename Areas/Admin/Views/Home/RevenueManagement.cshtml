@{ 
    ViewData["Title"] = "Quản Lý Doanh Thu Sản Phẩm";
}

<div class="container">
    <h2>Quản Lý Doanh Thu Sản Phẩm</h2>

    <!-- Form lọc theo ngày tháng -->
    <form method="get" asp-action="RevenueManagement">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label for="startDate">Ngày bắt đầu</label>
                <input type="date" name="startDate" id="startDate" class="form-control" />
            </div>
            <div class="form-group col-md-3">
                <label for="endDate">Ngày kết thúc</label>
                <input type="date" name="endDate" id="endDate" class="form-control" />
            </div>
            <div class="form-group col-md-2">
                <button type="submit" class="btn btn-primary" style="margin-top: 32px;">Lọc</button>
            </div>
        </div>
    </form>

    <!-- Hiển thị tổng doanh thu -->
    <div>
        <h4>Tổng doanh thu: @ViewBag.TotalRevenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</h4>
    </div>

    <!-- Bảng doanh thu sản phẩm -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Loại Sản Phẩm</th>
                <th>Số Lượng Bán</th>
                <th>Tổng Tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.SalesData)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.QuantitySold</td>
                    <td>@item.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
