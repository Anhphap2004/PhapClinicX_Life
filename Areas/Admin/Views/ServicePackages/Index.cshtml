@model IEnumerable<PhapClinicX.Models.ServicePackage>

@{
    ViewData["Title"] = "Quản lý Gói Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-3">
        <div class="col-12">
            <h4 class="fw-bold text-primary mb-3">Danh sách gói dịch vụ</h4>
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-0">
            <div class="p-3 border-bottom">
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Thêm mới
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="text-center" style="width: 5%;">#</th>
                            <th style="width: 30%;">Gói Dịch Vụ</th>
                            <th class="text-end" style="width: 15%;">Giá</th>
                            <th class="text-center" style="width: 10%;">Ảnh</th>
                            <th class="text-center" style="width: 15%;">Trạng Thái</th>
                            <th class="text-center" style="width: 25%;">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@stt</td>
                                <td class="text-truncate" title="@item.PackageName">@item.PackageName</td>
                                <td class="text-end">@(item.Price?.ToString("N0") ?? "-") VNĐ</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.Image))
                                    {
                                        <img src="~/assets/img/ServicePackages/@item.Image" alt="@item.PackageName"
                                             class="img-thumbnail" width="40" height="40">
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngừng</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-1">
                                        <a asp-action="Edit" asp-route-id="@item.PackageId"
                                           class="btn btn-outline-primary btn-sm">
                                            Sửa
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.PackageId"
                                           class="btn btn-outline-secondary btn-sm">
                                            Xem
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.PackageId"
                                           class="btn btn-outline-danger btn-sm">
                                            Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>