@model PhapClinicX.Models.ServicePackage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">
    <h1 class="text-center mb-5">Chi Tiết Gói Dịch Vụ</h1>

    <div class="card shadow">
        <div class="card-body">
            <h4 class="text-primary mb-4">Thông Tin Gói Dịch Vụ</h4>
            <hr class="mb-4" />
            <dl class="row">
                <dt class="col-md-3 fw-bold text-md-end">Tên Gói:</dt>
                <dd class="col-md-9">@Model.PackageName</dd>

                <dt class="col-md-3 fw-bold text-md-end">Giá:</dt>
                <dd class="col-md-9">@Model.Price?.ToString("N0") VNĐ</dd>

                <dt class="col-md-3 fw-bold text-md-end">Trạng Thái:</dt>
                <dd class="col-md-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Ngừng</span>
                    }
                </dd>

                <dt class="col-md-3 fw-bold text-md-end">Hình Ảnh:</dt>
                <dd class="col-md-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/assets/img/ServicePackages/@Model.Image" alt="Ảnh gói dịch vụ" class="border rounded" style="max-width: 200px; height: auto;" />
                    }
                    else
                    {
                        <span>Không có ảnh</span>
                    }
                </dd>

                <dt class="col-md-3 fw-bold text-md-end">Tiêu Đề:</dt>
                <dd class="col-md-9">@Model.Title</dd>

                <dt class="col-md-3 fw-bold text-md-end">Chi Tiết:</dt>
                <dd class="col-md-9">@Html.Raw(Model.Detail)</dd>

                <dt class="col-md-3 fw-bold text-md-end">Ngày Tạo:</dt>
                <dd class="col-md-9">@Model.Date.ToString("dd/MM/yyyy")</dd>
            </dl>

            <div class="text-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.PackageId" class="btn btn-warning px-4">Chỉnh Sửa</a>
                <a asp-action="Index" class="btn btn-secondary px-4 ms-2">Quay Lại</a>
            </div>
        </div>
    </div>
</div>