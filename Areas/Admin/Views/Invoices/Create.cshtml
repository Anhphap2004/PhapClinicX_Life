@model PhapClinicX.Models.Invoice
@using PhapClinicX.Models.ViewModels
@{
    ViewData["Title"] = "Tạo Hóa Đơn";
    var packageGroups = ViewData["PackageGroups"] as List<PackageSelectionGroup> ?? new();
    var productGroups = ViewData["ProductGroups"] as List<ProductSelectionGroup> ?? new();
    var selectedPackageQuantities = ViewData["SelectedPackageQuantities"] as Dictionary<int, int> ?? new();
    var selectedProductQuantities = ViewData["SelectedProductQuantities"] as Dictionary<int, int> ?? new();
}

<style>
    .invoice-page {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 30px;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    }

    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #f0f0f0;
        border-radius: 12px 12px 0 0 !important;
        padding: 20px 25px;
    }

    .card-body {
        padding: 25px;
    }

    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 8px;
    }

    .form-control,
    .form-select {
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #e1e5eb;
        font-size: 0.95rem;
    }

    .btn {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
    }

    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 25px;
        padding-bottom: 15px;
        position: relative;
    }

    .page-title:after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        height: 4px;
        width: 50px;
        background-color: #4e73df;
        border-radius: 2px;
    }

    .required-field:after {
        content: "*";
        color: #dc3545;
        margin-left: 4px;
    }

    .item-card {
        background: #fff;
        border: 1px solid #eef0f2;
        border-radius: 10px;
        transition: all 0.2s ease;
        height: 100%;
    }

    .item-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
    }

    .tag {
        background: #eef1f7;
        color: #4e73df;
        border-radius: 20px;
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    .price-text {
        color: #1b5e20;
        font-weight: 600;
    }
</style>

<div class="container-fluid py-4 invoice-page">
    <h2 class="page-title">Tạo Hóa Đơn Mới</h2>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-user me-2"></i> Thông tin khách hàng</h5>
                <span class="tag">Bắt buộc</span>
            </div>
            <div class="card-body">
                <div class="form-group mb-3">
                    <label asp-for="UserId" class="form-label required-field">Người nhận hóa đơn</label>
                    <select asp-for="UserId" class="form-select" asp-items="@(ViewData["UserId"] as SelectList)"
                        required>
                        <option value="">-- Vui lòng chọn khách hàng --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Thông tin hóa đơn</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="PhongKhamId" class="form-label required-field">Phòng khám</label>
                        <select asp-for="PhongKhamId" class="form-select" asp-items="ViewBag.PhongKhamId" required>
                            <option value="">-- Chọn phòng khám --</option>
                        </select>
                        <span asp-validation-for="PhongKhamId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="InvoiceType" class="form-label required-field">Loại hóa đơn</label>
                        <select asp-for="InvoiceType" class="form-select" required>
                            <option value="">-- Chọn loại hóa đơn --</option>
                            <option value="Sản phẩm">Sản phẩm</option>
                            <option value="Dịch vụ">Dịch vụ</option>
                            <option value="Lịch hẹn">Lịch hẹn</option>
                        </select>
                        <span asp-validation-for="InvoiceType" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label required-field">Trạng thái</label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="">-- Chọn trạng thái --</option>
                            <option value="Chờ xử lý">Chờ xử lý</option>
                            <option value="Đang giao hàng">Đang giao hàng</option>
                            <option value="Đã thanh toán">Đã thanh toán</option>
                            <option value="Đã hủy">Đã hủy</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Method" class="form-label required-field">Phương thức thanh toán</label>
                        <select asp-for="Method" class="form-select" required>
                            <option value="">-- Chọn phương thức --</option>
                            <option value="Tiền Mặt">Tiền mặt</option>
                            <option value="Thẻ">Thẻ</option>
                            <option value="Chuyển Khoản">Chuyển khoản</option>
                            <option value="VNPAY">Ví VNPAY</option>
                        </select>
                        <span asp-validation-for="Method" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4" id="package-section">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-boxes-stacked me-2"></i> Chọn gói dịch vụ</h5>
                <span class="text-muted small">Chọn nhiều gói theo danh mục</span>
            </div>
            <div class="card-body">
                @if (!packageGroups.Any())
                {
                    <div class="alert alert-warning mb-0">Chưa có gói dịch vụ hoạt động.</div>
                }
                else
                {
                    foreach (var category in packageGroups)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">@category.CategoryName</h6>
                                <span class="tag">@category.Packages.Count gói</span>
                            </div>
                            <div class="row g-3">
                                @foreach (var package in category.Packages)
                                {
                                    var hasSelection = selectedPackageQuantities.TryGetValue(package.PackageId, out var pkgQty);
                                    var displayQty = hasSelection ? pkgQty : 1;
                                    <div class="col-md-6 col-lg-4">
                                        <div class="item-card p-3 h-100">
                                            <div class="form-check d-flex align-items-start">
                                                <input class="form-check-input package-checkbox" type="checkbox"
                                                    id="package-@package.PackageId" name="packageIds" value="@package.PackageId"
                                                    data-price="@package.Price" @(hasSelection ? "checked" : string.Empty) />
                                                <label class="form-check-label w-100 ms-2" for="package-@package.PackageId">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="fw-semibold">@package.PackageName</span>
                                                        <span class="price-text small">@package.Price.ToString("N0") ₫</span>
                                                    </div>
                                                    <div class="mt-2 d-flex align-items-center gap-2">
                                                        <span class="text-muted small">Số lượng</span>
                                                        <input type="number" min="1"
                                                            class="form-control form-control-sm package-qty"
                                                            id="package-qty-@package.PackageId" name="packageQuantities"
                                                            value="@displayQty" @(hasSelection ? string.Empty : "disabled") />
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="card mb-4" id="product-section">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-capsules me-2"></i> Chọn sản phẩm</h5>
                <span class="text-muted small">Chọn nhiều sản phẩm theo danh mục</span>
            </div>
            <div class="card-body">
                @if (!productGroups.Any())
                {
                    <div class="alert alert-info mb-0">Chưa có sản phẩm hoạt động.</div>
                }
                else
                {
                    foreach (var category in productGroups)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">@category.CategoryName</h6>
                                <span class="tag">@category.Products.Count sản phẩm</span>
                            </div>
                            <div class="row g-3">
                                @foreach (var product in category.Products)
                                {
                                    var hasSelection = selectedProductQuantities.TryGetValue(product.ProductId, out var prodQty);
                                    var displayQty = hasSelection ? prodQty : 1;
                                    <div class="col-md-6 col-lg-4">
                                        <div class="item-card p-3 h-100">
                                            <div class="form-check d-flex align-items-start">
                                                <input class="form-check-input product-checkbox" type="checkbox"
                                                    id="product-@product.ProductId" name="productIds" value="@product.ProductId"
                                                    data-price="@product.Price" @(hasSelection ? "checked" : string.Empty) />
                                                <label class="form-check-label w-100 ms-2" for="product-@product.ProductId">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="fw-semibold">@product.ProductName</span>
                                                        <span class="price-text small">@product.Price.ToString("N0") ₫</span>
                                                    </div>
                                                    <div class="mt-2 d-flex align-items-center gap-2">
                                                        <span class="text-muted small">Số lượng</span>
                                                        <input type="number" min="1"
                                                            class="form-control form-control-sm product-qty"
                                                            id="product-qty-@product.ProductId" name="productQuantities"
                                                            value="@displayQty" @(hasSelection ? string.Empty : "disabled") />
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-credit-card me-2"></i> Chi tiết thanh toán</h5>
            </div>
            <div class="card-body">
                <div class="row g-3 align-items-center">
                    <div class="col-md-6">
                        <label asp-for="TotalAmount" class="form-label required-field">Tổng tiền</label>
                        <div class="input-group">
                            <input asp-for="TotalAmount" class="form-control" id="TotalAmount" placeholder="0"
                                readonly />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <small class="text-muted">Tự động tính theo gói và sản phẩm đã chọn</small>
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i> Tạo hóa đơn
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <script>
        const formatCurrency = (value) => value.toLocaleString('vi-VN', { minimumFractionDigits: 0 }) + ' ₫';

        const updateTotal = () => {
            let total = 0;

            document.querySelectorAll('.package-checkbox:checked').forEach(cb => {
                const price = Number(cb.dataset.price || 0);
                const qtyInput = document.getElementById(`package-qty-${cb.value}`);
                const qty = qtyInput ? Math.max(1, Number(qtyInput.value) || 1) : 1;
                total += price * qty;
            });

            document.querySelectorAll('.product-checkbox:checked').forEach(cb => {
                const price = Number(cb.dataset.price || 0);
                const qtyInput = document.getElementById(`product-qty-${cb.value}`);
                const qty = qtyInput ? Math.max(1, Number(qtyInput.value) || 1) : 1;
                total += price * qty;
            });

            const totalInput = document.getElementById('TotalAmount');
            if (totalInput) {
                totalInput.value = total.toFixed(2);
            }
        };

        const toggleQuantity = (checkbox, prefix) => {
            const qtyInput = document.getElementById(`${prefix}-qty-${checkbox.value}`);
            if (!qtyInput) return;
            qtyInput.disabled = !checkbox.checked;
            if (checkbox.checked && (!qtyInput.value || Number(qtyInput.value) < 1)) {
                qtyInput.value = 1;
            }
        };

        document.addEventListener('DOMContentLoaded', () => {
            const typeSelect = document.getElementById('InvoiceType');

            const toggleSections = () => {
                const type = typeSelect?.value;
                const showPackages = type === 'Dịch vụ';
                const showProducts = type === 'Sản phẩm';

                const packageSection = document.getElementById('package-section');
                const productSection = document.getElementById('product-section');

                if (packageSection) packageSection.style.display = showPackages ? '' : 'none';
                if (productSection) productSection.style.display = showProducts ? '' : 'none';

                document.querySelectorAll('.package-checkbox').forEach(cb => {
                    cb.disabled = !showPackages;
                    if (!showPackages) {
                        cb.checked = false;
                        toggleQuantity(cb, 'package');
                    }
                });

                document.querySelectorAll('.product-checkbox').forEach(cb => {
                    cb.disabled = !showProducts;
                    if (!showProducts) {
                        cb.checked = false;
                        toggleQuantity(cb, 'product');
                    }
                });

                updateTotal();
            };

            document.querySelectorAll('.package-checkbox').forEach(cb => {
                cb.addEventListener('change', (e) => {
                    toggleQuantity(e.target, 'package');
                    updateTotal();
                });
            });

            document.querySelectorAll('.product-checkbox').forEach(cb => {
                cb.addEventListener('change', (e) => {
                    toggleQuantity(e.target, 'product');
                    updateTotal();
                });
            });

            document.querySelectorAll('.package-qty, .product-qty').forEach(input => {
                input.addEventListener('input', () => updateTotal());
            });

            typeSelect?.addEventListener('change', toggleSections);
            toggleSections();
            updateTotal();
        });
    </script>
}