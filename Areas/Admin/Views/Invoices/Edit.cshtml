@model PhapClinicX.Models.Invoice
@using Newtonsoft.Json
@using PhapClinicX.Models.ViewModels
@{
    ViewData["Title"] = "Chỉnh Sửa Hóa Đơn";
}

<style>
    .invoice-page {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 30px;
    }
    
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
    }
    
    .card-header {
        background-color: #fff;
        border-bottom: 1px solid #f0f0f0;
        border-radius: 12px 12px 0 0 !important;
        padding: 20px 25px;
    }
    
    .card-header h5 {
        margin-bottom: 0;
        font-weight: 600;
        color: #2c3e50;
    }
    
    .card-body {
        padding: 25px;
    }
    
    .form-label {
        font-weight: 500;
        color: #495057;
        margin-bottom: 8px;
    }
    
        border-radius: 8px;
        padding: 10px 15px;
        border: 1px solid #e1e5eb;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.15);
    }
    
    .btn {
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }
    
    .btn-primary:hover {
        background-color: #3f5eca;
        border-color: #3f5eca;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(78, 115, 223, 0.25);
    }
    
    .btn-secondary {
        background-color: #f8f9fa;
        border-color: #e1e5eb;
        color: #6c757d;
    }
    
    .btn-secondary:hover {
        background-color: #e9ecef;
        border-color: #dde2e6;
        color: #495057;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }
    
    .page-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 25px;
        padding-bottom: 15px;
        position: relative;
    }
    
    .page-title:after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        height: 4px;
        width: 50px;
        background-color: #4e73df;
        border-radius: 2px;
    }
    
    .input-group-text {
        background-color: #f8f9fa;
        border-color: #e1e5eb;
        color: #6c757d;
    }
    
    .required-field:after {
        content: "*";
        color: #dc3545;
        margin-left: 4px;
    }
    
    }
    
    }
    
    }
    
    }
    
    .status-cancelled {
        background-color: #e74a3b;
    }
    
    /* Badge cho mã hóa đơn */
    .invoice-id-badge {
        background-color: #eaecf4;
        color: #4e73df;
        border-radius: 6px;
        padding: 4px 10px;
        font-weight: 500;
        font-size: 0.9rem;
        display: inline-block;
    }
</style>

<div class="container-fluid py-4 invoice-page">
    <h2 class="page-title">Chỉnh Sửa Hóa Đơn</h2>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>
        <input asp-for="CreatedAt" type="hidden" />

        <div class="form-group mb-3">
            </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <!-- Thông tin hóa đơn -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="fas fa-file-invoice me-2"></i> Thông tin hóa đơn</h5>
                <span class="invoice-id-badge">
                    <i class="fas fa-hashtag me-1"></i> Mã hóa đơn: @Model.InvoiceId
                </span>
            </div>
        </div>

       
        <!-- Thông tin cơ bản -->
        <div class="card mb-4">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="PhongKhamId" class="form-label required-field">Phòng khám</label>
                        <select asp-for="PhongKhamId" class="form-select" asp-items="ViewBag.PhongKhamId" required>
                            <option value="">-- Chọn phòng khám --</option>
                        </select>
                        <span asp-validation-for="PhongKhamId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="PackageId" class="form-label required-field">Gói dịch vụ</label>
                        <select id="PackageId" name="PackageId" class="form-select" asp-items="@(ViewData["PackageId"] as SelectList)">
                            <option value="">-- Chọn gói dịch vụ --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="Price" class="form-label">Đơn giá</label>
                        <div class="input-group">
                            <input type="text" id="Price" name="PriceDisplay" class="form-control" readonly />
                            <span class="input-group-text">VNĐ</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="InvoiceType" class="form-label required-field">Loại hóa đơn</label>
                        <select asp-for="InvoiceType" class="form-select" required>
                            <option value="">-- Chọn loại hóa đơn --</option>
                            <option value="Sản phẩm">Sản phẩm</option>
                            <option value="Dịch vụ">Dịch vụ</option>
                            <option value="Lịch hẹn">Lịch hẹn</option>
                        </select>
                        <span asp-validation-for="InvoiceType" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label required-field">Trạng thái</label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="">-- Chọn trạng thái --</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Method" class="form-label required-field">Phương thức thanh toán</label>
                        <select asp-for="Method" class="form-select" required>
                            <option value="">-- Chọn phương thức --</option>
                            <option value="TienMat">Tiền mặt</option>
                            <option value="Thẻ">Thẻ</option>
                            <option value="Chuyển Khoản">Chuyển khoản</option>
                            <option value="VNPAY">Ví VNPAY</option>
                        </select>
                        <span asp-validation-for="Method" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-boxes-stacked me-2"></i> Chọn gói dịch vụ</h5>
                <span class="text-muted small">Chọn nhiều gói theo danh mục</span>
            </div>
            <div class="card-body">
                @if (!packageGroups.Any())
                {
                    <div class="alert alert-warning mb-0">Chưa có gói dịch vụ hoạt động.</div>
                }
                else
                {
                    foreach (var category in packageGroups)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">@category.CategoryName</h6>
                                <span class="tag">@category.Packages.Count gói</span>
                            </div>
                            <div class="row g-3">
                                @foreach (var package in category.Packages)
                                {
                                    var hasSelection = selectedPackageQuantities.TryGetValue(package.PackageId, out var pkgQty);
                                    var displayQty = hasSelection ? pkgQty : 1;
                                    <div class="col-md-6 col-lg-4">
                                        <div class="item-card p-3 h-100">
                                            <div class="form-check d-flex align-items-start">
                                                <input class="form-check-input package-checkbox" type="checkbox"
                                                    id="package-@package.PackageId" name="packageIds" value="@package.PackageId"
                                                    data-price="@package.Price" @(hasSelection ? "checked" : string.Empty) />
                                                <label class="form-check-label w-100 ms-2" for="package-@package.PackageId">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="fw-semibold">@package.PackageName</span>
                                                        <span class="price-text small">@package.Price.ToString("N0") ₫</span>
                                                    </div>
                                                    <div class="mt-2 d-flex align-items-center gap-2">
                                                        <span class="text-muted small">Số lượng</span>
                                                        <input type="number" min="1"
                                                            class="form-control form-control-sm package-qty"
                                                            id="package-qty-@package.PackageId" name="packageQuantities"
                                                            value="@displayQty" @(hasSelection ? string.Empty : "disabled") />
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-capsules me-2"></i> Chọn sản phẩm</h5>
                <span class="text-muted small">Chọn nhiều sản phẩm theo danh mục</span>
            </div>
            <div class="card-body">
                @if (!productGroups.Any())
                {
                    <div class="alert alert-info mb-0">Chưa có sản phẩm hoạt động.</div>
                }
                else
                {
                    foreach (var category in productGroups)
                    {
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0">@category.CategoryName</h6>
                                <span class="tag">@category.Products.Count sản phẩm</span>
                            </div>
                            <div class="row g-3">
                                @foreach (var product in category.Products)
                                {
                                    var hasSelection = selectedProductQuantities.TryGetValue(product.ProductId, out var prodQty);
                                    var displayQty = hasSelection ? prodQty : 1;
                                    <div class="col-md-6 col-lg-4">
                                        <div class="item-card p-3 h-100">
                                            <div class="form-check d-flex align-items-start">
                                                <input class="form-check-input product-checkbox" type="checkbox"
                                                    id="product-@product.ProductId" name="productIds" value="@product.ProductId"
                                                    data-price="@product.Price" @(hasSelection ? "checked" : string.Empty) />
                                                <label class="form-check-label w-100 ms-2" for="product-@product.ProductId">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span class="fw-semibold">@product.ProductName</span>
                                                        <span class="price-text small">@product.Price.ToString("N0") ₫</span>
                                                    </div>
                                                    <div class="mt-2 d-flex align-items-center gap-2">
                                                        <span class="text-muted small">Số lượng</span>
                                                        <input type="number" min="1"
                                                            class="form-control form-control-sm product-qty"
                                                            id="product-qty-@product.ProductId" name="productQuantities"
                                                            value="@displayQty" @(hasSelection ? string.Empty : "disabled") />
                                                    </div>
                                                </label>
                </div>
            </div>
        </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Chi tiết thanh toán -->
        <div class="card mb-4">
            <div class="card-header">
            </div>
            <div class="card-body">
                    <div class="col-md-6">
                        <label asp-for="TotalAmount" class="form-label required-field">Tổng tiền</label>
                        <div class="input-group">
                            <span class="input-group-text">VNĐ</span>
                        </div>
                        <small class="text-muted">Tự động tính theo gói và sản phẩm đã chọn</small>
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Method" class="form-label required-field">Phương thức thanh toán</label>
                        <select asp-for="Method" class="form-select" required>
                            <option value="">-- Chọn phương thức --</option>
                            <option value="Tiền Mặt">
                                <i class="fas fa-money-bill-wave"></i> Tiền mặt
                            </option>
                            <option value="Thẻ">
                                <i class="fas fa-credit-card"></i> Thẻ
                            </option>
                            <option value="Chuyển Khoản">
                                <i class="fas fa-university"></i> Chuyển khoản
                            </option>
                            <option value="VNPAY">
                                <i class="fas fa-wallet"></i> Ví VNPAY
                            </option>
                        </select>
                        <span asp-validation-for="Method" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Quay lại
            </a>
            <div>
                <a asp-action="Details" asp-route-id="@Model.InvoiceId" class="btn btn-info me-2">
                    <i class="fas fa-eye me-2"></i> Xem chi tiết
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Lưu thay đổi
                </button>
            </div>
        </div>
    </form>
</div>
