@model IEnumerable<PhapClinicX.Models.Invoice>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int p = 1;
}

<h2 class="text-center mt-3 mb-4">📄 Danh sách hóa đơn</h2>

<p class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">+ Thêm hóa đơn</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>STT</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
            <th>Loại hóa đơn</th>
            <th>Người lập</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(p++)</td>
                <td class="text-end">@item.TotalAmount?.ToString("N0") đ</td>
                <td class="text-center">@item.Status</td>
                <td class="text-center">@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
                <td class="text-center">@item.InvoiceType</td>
                <td class="text-center">@item.User?.FullName</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-warning">✏️ Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-info">📖 Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.InvoiceId" class="btn btn-sm btn-danger">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
