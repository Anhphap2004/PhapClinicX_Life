@model PhapClinicX.Models.DoctorProfile

@{
    ViewData["Title"] = "Xóa Bác Sĩ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-danger">Xóa Bác Sĩ</h1>

<div class="container mt-4">
    <div class="alert alert-warning text-center" role="alert">
        <h4 class="alert-heading">Bạn có chắc chắn muốn xóa bác sĩ này?</h4>
        <p>Hành động này không thể hoàn tác!</p>
    </div>

    <div class="card shadow-lg p-4 border-0 rounded-3">
        <h4 class="text-secondary">Thông Tin Bác Sĩ</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold text-primary">Họ và Tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Fullname)</dd>

            <dt class="col-sm-3 fw-bold text-primary">Chuyên Môn</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Specialization)</dd>

            <dt class="col-sm-3 fw-bold text-primary">Kinh Nghiệm</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Experience) năm</dd>

            <dt class="col-sm-3 fw-bold text-primary">Học Vấn</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Education)</dd>

            <dt class="col-sm-3 fw-bold text-primary">Số Điện Thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-3 fw-bold text-primary">Phòng Khám</dt>
            <dd class="col-sm-9">@Model.PhongKham?.TenPhongKham</dd>

            <dt class="col-sm-3 fw-bold text-primary">Hình Ảnh</dt>
            <dd class="col-sm-9 text-center">
                <img src="@Url.Content(Model.Image != null ? $"/assets/img/team/{Model.Image}" : "~/assets/img/default.jpg")"
                     class="img-fluid border rounded shadow-sm" style="max-width: 300px; display: block; margin: 0 auto;" />
            </dd>

            <dt class="col-sm-3 fw-bold text-primary">Trạng Thái</dt>
            <dd class="col-sm-9"><span class="badge @(Model.Isactive ? "bg-success" : "bg-danger")">@(Model.Isactive ? "Đang hoạt động" : "Ngừng hoạt động")</span></dd>
        </dl>
    </div>
</div>

<!-- Nút hành động -->
<div class="text-center mt-4 mb-4">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DoctorId" />
        <button type="submit" class="btn btn-danger px-4 shadow-sm">
            <i class="fas fa-trash-alt"></i> Xóa
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4 shadow-sm">
            <i class="fas fa-list"></i> Quay lại danh sách
        </a>
    </form>
</div>
