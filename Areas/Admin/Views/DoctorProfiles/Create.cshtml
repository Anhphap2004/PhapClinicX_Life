@model PhapClinicX.Models.DoctorProfile

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h1>📌 Thêm Bác Sĩ</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Fullname" class="col-sm-4 col-form-label">Họ Tên</label>
                        <div class="col-sm-8">
                            <input asp-for="Fullname" class="form-control" placeholder="Nhập họ tên" />
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Phone" class="col-sm-4 col-form-label">Số Điện Thoại</label>
                        <div class="col-sm-8">
                            <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Specialization" class="col-sm-4 col-form-label">Chuyên Ngành</label>
                        <div class="col-sm-8">
                            <input asp-for="Specialization" class="form-control" placeholder="VD: Nội Khoa, Ngoại Khoa..." />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Experience" class="col-sm-4 col-form-label">Kinh Nghiệm</label>
                        <div class="col-sm-8">
                            <input asp-for="Experience" class="form-control" placeholder="Nhập số năm kinh nghiệm" />
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Education" class="col-sm-4 col-form-label">Trình Độ</label>
                        <div class="col-sm-8">
                            <input asp-for="Education" class="form-control" placeholder="VD: Bác sĩ chuyên khoa I, II..." />
                            <span asp-validation-for="Education" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PhongKhamId" class="col-sm-4 col-form-label">Phòng Khám</label>
                        <div class="col-sm-8">
                            <select asp-for="PhongKhamId" class="form-control" asp-items="ViewBag.PhongKhamId">
                                <option value="">-- Chọn phòng khám --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Cột bên phải -->
                <div class="col-md-6">
                    <div class="form-group row">
                        <label asp-for="Introduce" class="col-sm-4 col-form-label">Giới Thiệu</label>
                        <div class="col-sm-8">
                            <textarea asp-for="Introduce" class="form-control" rows="3" placeholder="Giới thiệu về bác sĩ"></textarea>
                            <span asp-validation-for="Introduce" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="WorkSchedule" class="col-sm-4 col-form-label">Lịch Làm Việc</label>
                        <div class="col-sm-8">
                            <input asp-for="WorkSchedule" class="form-control" placeholder="VD: Thứ 2 - Thứ 6, 8h - 17h" />
                            <span asp-validation-for="WorkSchedule" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Ảnh</label>
                        <div class="col-sm-8">
                            <input type="file" id="imageUpload" class="form-control" accept="image/*" />
                            <input type="hidden" asp-for="Image" id="ImagePath" />
                            <span asp-validation-for="Image" class="text-danger"></span>

                            <div class="mt-3 text-center">
                                <img id="imagePreview" src="~/assets/img/default.jpg" class="border rounded" style="max-width: 150px;" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-8 offset-sm-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Isactive" />
                                <label class="form-check-label" asp-for="Isactive">Đang hoạt động</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nút hành động -->
            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary">Thêm Mới</button>
                <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("imageUpload").addEventListener("change", function (event) {
            let file = event.target.files[0];
            if (file) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("imagePreview").src = e.target.result;
                };
                reader.readAsDataURL(file);

                // Gửi ảnh lên server
                let formData = new FormData();
                formData.append("file", file);

                fetch("/Admin/DoctorProfiles/UploadImage", {
                    method: "POST",
                    body: formData
                })
                .then(response => response.text())
                .then(imagePath => {
                    document.getElementById("ImagePath").value = imagePath;
                })
                .catch(error => console.error("Lỗi upload ảnh:", error));
            }
        });
    </script>
}
