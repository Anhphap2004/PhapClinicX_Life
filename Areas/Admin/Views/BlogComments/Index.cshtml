@model IEnumerable<PhapClinicX.Models.BlogComment>

@{
    ViewData["Title"] = "Danh sách bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Danh Sách Bình Luận</h1>



<table class="table table-striped table-bordered">
    <thead class="table-dark text-center">
        <tr>
            <th>STT</th>
            <th>Họ Tên</th>
            <th>Bài Viết</th>
            <td>Ảnh</td>
            <th>Bình Luận</th>
            <th>Ngày Bình Luận</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    @{
        int p = 1;
    }
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
             <td>@(p++)</td>
                <td>
                    @if (item.User != null)
                    {
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    }
                </td>
                <td>
                    @if (item.Blog != null)
                    {
                        @Html.DisplayFor(modelItem => item.Blog.Title)
                    }
                </td>
                <td>
                    <img src="~/assets/img/blogs/@item.Blog?.Image" alt="Alternate Text" style="width: 70px;height:70px" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td class="text-center">
   
                    <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-sm btn-info">Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
