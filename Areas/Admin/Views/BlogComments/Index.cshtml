@model IEnumerable<PhapClinicX.Models.BlogComment>

@{
    ViewData["Title"] = "Danh sách bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Danh Sách Bình Luận</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Thêm Bình Luận Mới</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark text-center">
        <tr>
            <th>#</th>
            <th>Họ Tên</th>
            <th>Bài Viết</th>
            <th>Bình Luận</th>
            <th>Ngày Bình Luận</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.CommentId</td>
                <td>
                    @if (item.User != null)
                    {
                        @Html.DisplayFor(modelItem => item.User.FullName)
                    }
                </td>
                <td>
                    @if (item.Blog != null)
                    {
                        @Html.DisplayFor(modelItem => item.Blog.Title)
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Comment)</td>
                <td class="text-center">@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-sm btn-info">Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
