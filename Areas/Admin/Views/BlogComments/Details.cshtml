@model PhapClinicX.Models.BlogComment

@{
    ViewData["Title"] = "Chi Tiết Bình Luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Chi Tiết Bình Luận</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-primary">Thông Tin Bình Luận</h5>
                    <hr />

                    <dl class="row">
                        <dt class="col-sm-4">Nội dung bình luận:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Comment)</dd>

                        <dt class="col-sm-4">Ngày bình luận:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>

                        <dt class="col-sm-4">Bài viết:</dt>
                        <dd class="col-sm-8">
                            <i class="bi bi-file-earmark-text me-1"></i> @(Model.Blog?.Title ?? "<em class='text-muted'>Không có bài viết</em>")
                        </dd>
                        <dt class="col-sm-4"><i class="bi bi-person-circle me-1"></i> Người bình luận:</dt>
                        <dd class="col-sm-8">
                            @(Model.User?.FullName ?? "<em class='text-muted'>Không rõ</em>")
                        </dd>

                    </dl>

                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    
                </div>
            </div>
        </div>
    </div>
</div>
</div>
