@model IEnumerable<PhapClinicX.Models.Contact>

@{
    ViewData["Title"] = "Danh sách liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">📋 Danh sách liên hệ</h1>
    

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>Họ Tên</th>
                <th>Tin Nhắn</th>
                <th>Ngày Liên Lạc</th>
                <th>Số Điện Thoại</th>
                <th>Email</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int p = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(p++)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fullname)</td>
                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @if(item.Status)
                        {
                            <span class="badge bg-success">Đã Xử Lí</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Chưa Xử Lí</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ContactId" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ContactId" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i> Xem
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.ContactId" class="btn btn-danger btn-sm"
                           onclick="return confirm('Bạn có chắc chắn muốn xóa?');">
                            <i class="fas fa-trash-alt"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
