@model PhapClinicX.Models.Contact

@{
    ViewData["Title"] = "Chỉnh Sửa Liên Hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h4>Chỉnh Sửa Liên Hệ</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ContactId" />

                <div class="row mb-3">
                    <label asp-for="Fullname" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Fullname" class="form-control" />
                        <span asp-validation-for="Fullname" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Message" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <textarea asp-for="Message" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="CreatedAt" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="CreatedAt" class="form-control" type="datetime-local" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Phone" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="Email" class="col-sm-3 col-form-label fw-bold"></label>
                    <div class="col-sm-9">
                        <input asp-for="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label fw-bold text-success">Trạng Thái</label>
                    <div class="col-sm-9">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Status" id="Status">
                            <label class="form-check-label" for="Status">Xử Lí</label>
                        </div>
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">💾 Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">🔙 Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
