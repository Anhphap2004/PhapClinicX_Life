@model PhapClinicX.Models.Contact

@{
    ViewData["Title"] = "Chi tiết liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Chi tiết liên hệ</h1>

<div>
    <h4 class="text-primary">Thông tin người liên hệ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold">
            Họ và tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fullname)
        </dd>

        <dt class="col-sm-2 fw-bold">
            Tin nhắn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt class="col-sm-2 fw-bold">
            Ngày gửi
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class="col-sm-2 fw-bold">
            Số điện thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <dt class="col-sm-2 fw-bold">
            Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model?.ContactId">📝 Chỉnh sửa</a>
    <a class="btn btn-secondary" asp-action="Index">🔙 Quay lại danh sách</a>
</div>
