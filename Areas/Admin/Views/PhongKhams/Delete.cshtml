@model PhapClinicX.Models.PhongKham

@{
    ViewData["Title"] = "Xoá phòng khám";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger fw-bold mb-4">
    <i class="bi bi-exclamation-triangle-fill me-2"></i> Bạn có chắc muốn xoá phòng khám này?
</h2>

<div class="card border-0 shadow-sm mb-4">
    <div class="row g-0 align-items-stretch">
        <div class="col-md-5">
            <div class="h-100 overflow-hidden rounded-start">
                <img src="~/assets/img/clinicbranch/@Model.Image" class="img-fluid w-100" style="object-fit: cover; min-height: 300px;" alt="@Model.TenPhongKham" />
            </div>
        </div>
        <div class="col-md-7">
            <div class="card-body p-4">
                <h4 class="card-title text-primary fw-semibold mb-3">@Model.TenPhongKham</h4>

                <div class="mb-2"><strong>Địa chỉ:</strong> @Model.DiaChi</div>
                <div class="mb-2"><strong>Số điện thoại:</strong> @Model.SoDienThoai</div>
                <div class="mb-2"><strong>Email:</strong> @Model.Email</div>
                <div class="mb-2"><strong>Ngày thành lập:</strong> @Model.NgayThanhLap?.ToString("dd/MM/yyyy")</div>
                <div class="mb-3">
                    <strong>Trạng thái:</strong>
                    <span class="badge @(Model.Isactive ? "bg-success" : "bg-secondary")">
                        @(Model.Isactive ? "Đang hoạt động" : "Tạm ngưng")
                    </span>
                </div>

                <div>
                    <strong>Giới thiệu:</strong>
                    <div class="mt-1">@Html.Raw(Model.Introduce)</div>
                </div>
            </div>
        </div>
    </div>
</div>


<form asp-action="Delete">
    <input type="hidden" asp-for="PhongKhamId" />
    <div class="d-flex justify-content-center gap-2 mb-3">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
            <i class="bi bi-trash3-fill"></i> Xoá ngay
        </button>
    </div>
</form>
