@model IEnumerable<PhapClinicX.Models.PhongKham>
@{
    ViewData["Title"] = "Danh sách phòng khám";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0 fw-semibold text-primary">
            <i class="bi bi-hospital me-2"></i>Danh sách phòng khám
        </h4>
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 py-2 shadow">
            <i class="bi bi-plus-circle me-2"></i> Thêm mới
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 mb-5">
        <div class="card-body p-4">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm rounded-4 border-0 clinic-card transition-all hover-shadow">
                            <div class="position-relative">
                                <img src="~/assets/img/clinicbranch/@item.Image" class="card-img-top rounded-top-4"
                                     style="height: 180px; object-fit: cover;" alt="@item.TenPhongKham" />
                                <span class="position-absolute top-0 end-0 m-3 badge @(item.Isactive ? "bg-success" : "bg-secondary") px-3 py-2 rounded-pill">
                                    @(item.Isactive ? "Đang hoạt động" : "Tạm ngưng")
                                </span>
                                <div class="position-absolute bottom-0 start-0 w-100 p-3 text-white"
                                     style="background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%);">
                                    <h5 class="card-title fw-bold mb-0">@item.TenPhongKham</h5>
                                </div>
                            </div>
                            <div class="card-body py-3 px-4">
                                <div class="clinic-info">
                                    <p class="text-muted mb-2"><i class="bi bi-geo-alt-fill me-2 text-primary"></i>@item.DiaChi</p>
                                    <p class="text-muted mb-2"><i class="bi bi-telephone-fill me-2 text-primary"></i>@item.SoDienThoai</p>
                                    <p class="text-muted mb-2"><i class="bi bi-envelope-fill me-2 text-primary"></i>@item.Email</p>
                                    <p class="text-muted mb-0"><i class="bi bi-calendar3-fill me-2 text-primary"></i>Thành lập: @item.NgayThanhLap?.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                            <div class="card-footer bg-white border-0 px-4 py-3">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Edit" asp-route-id="@item.PhongKhamId" class="btn btn-outline-primary rounded-pill px-3 py-1">
                                        <i class="bi bi-pencil-square me-1"></i> Sửa
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.PhongKhamId" class="btn btn-outline-info rounded-pill px-3 py-1">
                                        <i class="bi bi-info-circle me-1"></i> Chi tiết
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.PhongKhamId" class="btn btn-outline-danger rounded-pill px-3 py-1">
                                        <i class="bi bi-trash me-1"></i> Xóa
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .clinic-card {
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1) !important;
    }

    .card-img-top {
        transition: all 0.5s ease;
    }

    .clinic-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .clinic-info i {
        width: 20px;
        text-align: center;
    }

    .badge {
        font-weight: 500;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
</style>