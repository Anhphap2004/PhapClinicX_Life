@model PhapClinicX.Models.ClinicAppointment

@{
    ViewData["Title"] = "Xóa lịch hẹn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-danger">⚠️ Xóa Lịch Hẹn</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-50 border-danger">
        <h4 class="mb-3 text-danger">Bạn có chắc chắn muốn xóa lịch hẹn này không?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 fw-bold">👤 Họ và tên</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fullname)</dd>

            <dt class="col-sm-4 fw-bold">📞 Số điện thoại</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-4 fw-bold">📅 Ngày & Giờ</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateTime)</dd>

            <dt class="col-sm-4 fw-bold">🔹 Trạng thái</dt>
            <dd class="col-sm-8">
                @(Model.Status ? "✅ Đã xác nhận" : "❌ Chưa xác nhận")
            </dd>

            <dt class="col-sm-4 fw-bold">🏥 Phòng khám</dt>
            <dd class="col-sm-8">
                @(Model.PhongKham != null ? Model.PhongKham.TenPhongKham : "Chưa cập nhật")
            </dd>

        </dl>
        <hr />
        <form asp-action="Delete">
            <input type="hidden" asp-for="AppointmentId" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">🔙 Hủy</a>
                <button type="submit" class="btn btn-danger">🗑️ Xóa lịch hẹn</button>
            </div>
        </form>
    </div>
</div>
