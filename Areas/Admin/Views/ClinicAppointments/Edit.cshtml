@model PhapClinicX.Models.ClinicAppointment

@{
    ViewData["Title"] = "Chỉnh sửa lịch hẹn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">✏️ Chỉnh sửa lịch hẹn</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-50">
        <h4 class="mb-3">📋 Cập nhật thông tin</h4>
        <hr />
        <form asp-controller="ClinicAppointments" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointmentId" />

            <div class="mb-3">
                <label asp-for="Fullname" class="form-label fw-bold">Họ và tên</label>
                <input asp-for="Fullname" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateTime" class="form-label fw-bold">Ngày & Giờ</label>
                <input asp-for="DateTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 form-check">
                <input asp-for="Status" class="form-check-input" type="checkbox" />
                <label asp-for="Status" class="form-check-label fw-bold">Đã xác nhận</label>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhongKhamId" class="form-label fw-bold">Phòng khám</label>
                <select asp-for="PhongKhamId" class="form-select" asp-items="ViewBag.PhongKhamId"></select>
                <span asp-validation-for="PhongKhamId" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">📋 Quay lại danh sách</a>
                <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>

