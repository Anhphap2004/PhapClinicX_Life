@model PhapClinicX.Models.ClinicAppointment

@{
    ViewData["Title"] = "Chi tiết lịch hẹn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">📋 Chi tiết lịch hẹn</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-50">
        <h4 class="mb-3">Thông tin cuộc hẹn</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4 fw-bold">👤 Họ và tên</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Fullname)</dd>

            <dt class="col-sm-4 fw-bold">📞 Số điện thoại</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

            <dt class="col-sm-4 fw-bold">📅 Ngày & Giờ</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.DateTime)</dd>

            <dt class="col-sm-4 fw-bold">🔹 Trạng thái</dt>
            <dd class="col-sm-8">
                @(Model.Status ? "✅ Đã xác nhận" : "❌ Chưa xác nhận")
            </dd>

            <dt class="col-sm-4 fw-bold">🏥 Phòng khám</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.PhongKham.TenPhongKham)</dd>
        </dl>
        <hr />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">📋 Quay lại danh sách</a>
            <a asp-action="Edit" asp-route-id="@Model?.AppointmentId" class="btn btn-warning">✏️ Chỉnh sửa</a>
        </div>
    </div>
</div>
