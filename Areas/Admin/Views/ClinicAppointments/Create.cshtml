@model PhapClinicX.Models.ClinicAppointment

@{
    ViewData["Title"] = "Tạo lịch hẹn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">📅 Tạo lịch hẹn mới</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow p-4 w-50">
        <h4 class="mb-3">📝 Nhập thông tin</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Fullname" class="form-label fw-bold">Họ và tên</label>
                <input asp-for="Fullname" class="form-control" placeholder="Nhập họ và tên" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                <input asp-for="Phone" class="form-control" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateTime" class="form-label fw-bold">Ngày & Giờ</label>
                <input asp-for="DateTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="Status" class="form-check-input" type="checkbox" />
                <label class="form-check-label fw-bold">✅ Đã xác nhận</label>
            </div>

            <div class="mb-3">
                <label asp-for="PhongKhamId" class="form-label fw-bold">Phòng khám</label>
                <select asp-for="PhongKhamId" class="form-select" asp-items="ViewBag.PhongKhamId"></select>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">📋 Quay lại danh sách</a>
                <button type="submit" class="btn btn-primary">✅ Tạo lịch hẹn</button>
            </div>
        </form>
    </div>
</div>
