@model IEnumerable<PhapClinicX.Models.About>

@{
    ViewData["Title"] = "Quản lý Giới Thiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Quản lý About</h1>

<div class="d-flex justify-content-between mb-3">
    <h4 class="text-primary">Danh sách 1 phần giới thiệu trang web</h4>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Thêm Mới</a>
</div>

<div class="table-responsive">
    <table class="table table-hover table-bordered text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>Tiêu Đề</th>
                <th>Nội Dung</th>
                <th>Ngày Tạo</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int p = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(p++)</td>
                    <td class="text-start">@Html.DisplayFor(modelItem => item.Title)</td>
                    <td class="text-start text-truncate" style="max-width: 300px;">@Html.Raw(item.Content)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AboutId" class="btn btn-sm btn-primary"><i class="fa fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.AboutId" class="btn btn-sm btn-info"><i class="fa fa-info-circle"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.AboutId" class="btn btn-sm btn-danger"><i class="fa fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
