@model PhapClinicX.Models.About

@{
    ViewData["Title"] = "Xóa About";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-danger text-uppercase">Xóa About</h1>

<div class="card shadow-lg p-4 border-danger">
    <div class="card-body">
        <h4 class="card-title text-center text-uppercase fw-bold text-danger">Bạn có chắc chắn muốn xóa?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 text-secondary">Tiêu Đề:</dt>
            <dd class="col-sm-9 fw-bold">@Model.Title</dd>

            <dt class="col-sm-3 text-secondary">Nội Dung:</dt>
            <dd class="col-sm-9">
                <div class="border p-3 bg-light rounded">
                    @Html.Raw(Model.Content)
                </div>
            </dd>

            <dt class="col-sm-3 text-secondary">Hình Ảnh:</dt>
            <dd class="col-sm-9">
                <img src="@Model.Image" alt="Ảnh About" class="img-fluid rounded shadow-sm" style="max-width: 300px; height: auto;" />
            </dd>

            <dt class="col-sm-3 text-secondary">Ngày Tạo:</dt>
            <dd class="col-sm-9">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3 text-secondary">Trạng Thái:</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Đang Hoạt Động</span>
                }
                else
                {
                    <span class="badge bg-danger">Ngừng Hoạt Động</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4 mb-4 d-flex justify-content-between">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AboutId" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Xóa Ngay</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay Lại</a>
</div>
