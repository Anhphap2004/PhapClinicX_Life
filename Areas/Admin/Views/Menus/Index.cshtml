@model IEnumerable<PhapClinicX.Models.Menu>

@{
    ViewData["Title"] = "Danh sách Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Danh sách Menu</h2>

    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Thêm Menu
    </a>

    <table class="table table-bordered table-striped table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>STT</th>
                <th>Tên Menu</th>
                <th>Đường Dẫn</th>
                <th>Vị Trí</th>
                <th>Trạng Thái</th>
                <th>MenuCha</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int p = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(p++)</td>
                    <td>@Html.DisplayFor(modelItem => item.MenuName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Url)</td>
                    <td>@Html.DisplayFor(modelItem => item.Position)</td>
                    <td>
                        @if (item.IsActive != null)
                        {
                          
                                <span class="badge bg-success">Hoạt động</span>
                            
                        }
                        else
                        {
                            <span class="badge bg-danger">Tắt</span>
                        }
                    </td>
                    <td>
                        @(item.Parent != null ? item.Parent.MenuName : "Không có")
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MenuId" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                       
                        <a asp-action="Delete" asp-route-id="@item.MenuId" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
