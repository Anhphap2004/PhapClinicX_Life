@model PhapClinicX.Models.Menu

@{
    ViewData["Title"] = "Xóa Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card border border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0 text-center">⚠️ XÁC NHẬN XÓA MENU</h4>
        </div>

        <div class="card-body">
            <p class="text-danger fs-5 text-center fw-semibold">
                Bạn chắc chắn muốn xoá menu này chứ? Hành động này <u>không thể hoàn tác</u>!
            </p>
            <hr />

            <dl class="row">
                <dt class="col-sm-4 fw-bold">Tên Menu</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.MenuName)</dd>

                <dt class="col-sm-4 fw-bold">URL</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Url)</dd>

                <dt class="col-sm-4 fw-bold">Vị trí</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Position)</dd>

                <dt class="col-sm-4 fw-bold">Trạng thái</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                        @(Model.IsActive ? "Đang hoạt động" : "Không hoạt động")
                    </span>
                </dd>

                <dt class="col-sm-4 fw-bold">Menu cha</dt>
                <dd class="col-sm-8">
                    @(Model.Parent != null ? Model.Parent.MenuName : "<i>Không có</i>")
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>

            <form asp-action="Delete" class="d-inline">
                <input type="hidden" asp-for="MenuId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xác nhận xoá
                </button>
            </form>
        </div>
    </div>
</div>
