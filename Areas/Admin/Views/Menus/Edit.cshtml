@model PhapClinicX.Models.Menu

@{
    ViewData["Title"] = "Chỉnh sửa Menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-center">✏️ Chỉnh sửa Menu</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="MenuId" />

                <div class="row">
                    <!-- Menu Name -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="MenuName" class="form-label fw-bold">Tên Menu</label>
                        <input asp-for="MenuName" class="form-control" placeholder="VD: Trang chủ, Dịch vụ..." />
                        <span asp-validation-for="MenuName" class="text-danger small"></span>
                    </div>

                    <!-- URL -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Url" class="form-label fw-bold">Đường dẫn</label>
                        <input asp-for="Url" class="form-control" placeholder="/home/index" />
                        <span asp-validation-for="Url" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <!-- Vị trí -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="Position" class="form-label fw-bold">Vị trí hiển thị</label>
                        <input asp-for="Position" class="form-control" placeholder="VD: 1, 2, 3..." />
                        <span asp-validation-for="Position" class="text-danger small"></span>
                    </div>

                    <!-- Menu cha -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="ParentId" class="form-label fw-bold">Menu cha</label>
                        <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentId">
                            <option value="">-- Không có (Menu gốc) --</option>
                        </select>
                        <span asp-validation-for="ParentId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Trạng thái -->
                <div class="form-check form-switch mb-4">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" id="IsActiveSwitch">
                    <label class="form-check-label fw-bold ms-2" for="IsActiveSwitch">🟢 Kích hoạt hiển thị</label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        ⬅ Quay lại
                    </a>
                    <button type="submit" class="btn btn-success">
                        💾 Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
