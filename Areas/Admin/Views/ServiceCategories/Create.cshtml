@model PhapClinicX.Models.ServiceCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Thêm Dịch Vụ</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group row">
                <label asp-for="CategoryName" class="col-sm-2 col-form-label">Tên Dịch Vụ</label>
                <div class="col-sm-10">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label">Mô Tả</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="CreatedAt" class="col-sm-2 col-form-label">Ngày Thêm</label>
                <div class="col-sm-10">
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row d-flex">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="Create" class="btn btn-primary" /> 
                    <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
                </div>
                   
            </div>
        </form>
    </div>
</div>


