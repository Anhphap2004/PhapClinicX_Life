@model IEnumerable<PhapClinicX.Models.BlogCategory>

@{
    ViewData["Title"] = "Danh Mục Blog";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-primary text-uppercase">Quản Lý Danh Mục Blog</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Thêm Mới</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Alias</th>
                <th>Danh Mục</th>
                <th>Trạng Thái</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @{
                int p = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(p++)</td>
                    <td>@Html.DisplayFor(modelItem => item.Alias)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hoạt Động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Tạm Dừng</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info btn-sm">
                            <i class="fas fa-info-circle"></i> Chi Tiết
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
