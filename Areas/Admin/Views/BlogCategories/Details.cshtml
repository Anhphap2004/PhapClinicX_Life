@model PhapClinicX.Models.BlogCategory

@{
    ViewData["Title"] = "Chi Tiết Danh Mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-primary text-uppercase"><i class="fas fa-info-circle"></i> Chi Tiết Danh Mục</h1>

<div class="card shadow-lg p-4">
    <dl class="row">
        <dt class="col-sm-3 fw-bold text-secondary">
            <i class="fas fa-folder"></i> Tên Danh Mục:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

        <dt class="col-sm-3 fw-bold text-secondary">
            <i class="fas fa-link"></i> Alias:
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Alias)
        </dd>

        <dt class="col-sm-3 fw-bold text-secondary">
            <i class="fas fa-toggle-on"></i> Trạng Thái:
        </dt>
        <dd class="col-sm-9">
            @(Model.IsActive ? "Đang hoạt động" : "Ngừng hoạt động")
        </dd>
    </dl>

    <div class="d-flex">
        <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="btn btn-warning me-2">
            <i class="fas fa-edit"></i> Chỉnh Sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Quay Lại
        </a>
    </div>
</div>
