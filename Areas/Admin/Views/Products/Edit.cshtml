@model PhapClinicX.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thêm Sản Phẩm</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Thông tin cơ bản</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="CategoryId" class="form-label">Danh Mục</label>
                                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="ProductName" class="form-label">Tên Sản Phẩm</label>
                                        <input asp-for="ProductName" class="form-control" />
                                        <span asp-validation-for="ProductName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Price" class="form-label">Giá Cả</label>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="PriceSale" class="form-label">Giá Giảm</label>
                                        <input asp-for="PriceSale" class="form-control" />
                                        <span asp-validation-for="PriceSale" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label">Mô Tả</label>
                                    <input asp-for="Description" class="form-control" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Warranty" class="form-label">Bảo Hành</label>
                                    <input asp-for="Warranty" class="form-control" />
                                    <span asp-validation-for="Warranty" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Thông tin hàng tồn kho</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="ProductSold" class="form-label">Số Lượng Đã Bán</label>
                                        <input asp-for="ProductSold" class="form-control" />
                                        <span asp-validation-for="ProductSold" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="ProductImport" class="form-label">Số Lượng Nhập Vào</label>
                                        <input asp-for="ProductImport" class="form-control" />
                                        <span asp-validation-for="ProductImport" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Hình ảnh sản phẩm</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Image" class="form-label fw-semibold">Image</label>
                                            <input type="file" class="form-control" id="imageUpload" name="imageFile" />
                                            <input type="hidden" asp-for="Image" id="ImagePath" />
                                            <span asp-validation-for="Image" class="text-danger small"></span>
                                            <div class="form-text">Select image file up to 2MB. Format: JPG, PNG</div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <label class="form-label fw-semibold">Current Image</label>
                                            <div class="image-preview border rounded p-2">
                                                <img id="currentImage" src="~/assets/img/product/@Model.Image"
                                                     class="img-fluid rounded" alt="Product image"
                                                     style="height: 120px; object-fit: cover;" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Chi Tiết Sản Phẩm</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label asp-for="Detail" class="form-label">Chi Tiết</label>
                                    <textarea asp-for="Detail" id="summernoteEditor" class="form-control"></textarea>
                                    <span asp-validation-for="Detail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Thông Tin Bổ Sung</h5>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Alias" class="form-label">Alias</label>
                                        <input asp-for="Alias" class="form-control" />
                                        <span asp-validation-for="Alias" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="CreatedDate" class="form-label">Ngày Tạo</label>
                                        <input asp-for="CreatedDate" class="form-control" type="date" />
                                        <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input asp-for="IsNew" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsNew" class="form-check-label">Sản Phẩm Mới</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-check">
                                            <input asp-for="IsBestSeller" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsBestSeller" class="form-check-label">Bán Chạy</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Star" class="form-label">Đánh Giá</label>
                                        <input asp-for="Star" class="form-control" type="number" min="0" max="5" step="0.1" />
                                        <span asp-validation-for="Star" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay Về
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Thêm Sản Phẩm
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <!-- Summernote JS -->
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.20/dist/summernote-lite.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#summernoteEditor').summernote({
                placeholder: 'Nhập nội dung...',
                tabsize: 2,
                height: 300,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']]
                ]
            });
        });
    </script>
    <script>
        document.getElementById("imageUpload").addEventListener("change", function (event) {
            let file = event.target.files[0];
            if (file) {
                let reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById("currentImage").src = e.target.result;
                };
                reader.readAsDataURL(file);

                // Gửi ảnh lên server
                let formData = new FormData();
                formData.append("file", file);

                fetch("/Admin/Products/UploadImage", {
                    method: "POST",
                    body: formData
                })
                .then(response => response.text())
                .then(imagePath => {
                    document.getElementById("ImagePath").value = imagePath; // Gán đường dẫn ảnh vào input ẩn
                })
                .catch(error => console.error("Lỗi upload ảnh:", error));
            }
        });
    </script>
}