@model PhapClinicX.Models.DoctorAppointment

@{
    ViewData["Title"] = "Chỉnh sửa lịch hẹn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Chỉnh sửa lịch hẹn</h1>

<div class="card shadow p-4">
    <h4 class="mb-3">Thông tin cuộc hẹn</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AppointmentId" />

                <div class="form-group mb-3">
                    <label asp-for="DoctorId" class="form-label fw-bold">Bác sĩ</label>
                    <select asp-for="DoctorId" class="form-select" asp-items="ViewBag.DoctorId"></select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DateTime" class="form-label fw-bold">Ngày & Giờ</label>
                    <input asp-for="DateTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Fullname" class="form-label fw-bold">Họ và tên</label>
                    <input asp-for="Fullname" class="form-control" />
                    <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Phone" class="form-label fw-bold">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 form-check">
                    <input asp-for="Status" class="form-check-input" type="checkbox" />
                    <label asp-for="Status" class="form-check-label fw-bold">Đã xác nhận</label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
