@model PhapClinicX.Models.ProductComment

@{
    ViewData["Title"] = "Chi tiết bình luận";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Chi tiết bình luận</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nội dung</dt>
                <dd class="col-sm-9">@Model.Comment</dd>

                <dt class="col-sm-3">Ngày bình luận</dt>
                <dd class="col-sm-9">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3">Hình ảnh</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="~/assets/img/product/@Model.Image" alt="Ảnh" class="img-thumbnail" style="max-height: 100px;" />
                    }
                    else
                    {
                        <span class="text-muted">Không có hình ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3">Đánh giá</dt>
                <dd class="col-sm-9">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Model.Star)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                        else
                        {
                            <i class="far fa-star text-muted"></i>
                        }
                    }
                </dd>

                <dt class="col-sm-3">Sản phẩm</dt>
                <dd class="col-sm-9">@Model.Product?.ProductName</dd>

                <dt class="col-sm-3">Người bình luận</dt>
                <dd class="col-sm-9">@Model.User?.FullName 
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.CommentId" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
