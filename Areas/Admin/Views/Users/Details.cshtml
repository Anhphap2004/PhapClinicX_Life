@model PhapClinicX.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4"><i class="fas fa-user text-primary"></i> Chi tiết người dùng</h2>

<div class="card shadow-sm p-4 mb-4">
    <h4 class="mb-3">🧾 Thông tin người dùng</h4>
    <dl class="row">
        <dt class="col-sm-3 fw-bold">Họ và tên</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3 fw-bold">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3 fw-bold">Mật khẩu (hash)</dt>
        <dd class="col-sm-9">@Model.PasswordHash</dd>

        <dt class="col-sm-3 fw-bold">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3 fw-bold">Địa chỉ</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3 fw-bold">Ảnh đại diện</dt>
        <dd class="col-sm-9">
            <img src="@Url.Content(Model.ProfileImage != null ? $"/assets/img/team/{Model.ProfileImage}" : "~/assets/img/default.jpg")"
                 class="img-thumbnail" style="max-width: 200px;" />
        </dd>

        <dt class="col-sm-3 fw-bold">Trạng thái</dt>
        <dd class="col-sm-9">@((Model.IsActive) ? "✔ Đang hoạt động" : "❌ Đã khóa")</dd>

        <dt class="col-sm-3 fw-bold">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3 fw-bold">Tên đăng nhập</dt>
        <dd class="col-sm-9">@Model.Username</dd>

        <dt class="col-sm-3 fw-bold">Vai trò</dt>
        <dd class="col-sm-9">@Model.Role?.RoleName</dd>
    </dl>
</div>

<div class="mt-3 mb-3">
    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-warning me-2">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại danh sách
    </a>
</div>
