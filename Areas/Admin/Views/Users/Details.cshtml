@model PhapClinicX.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-0">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0">Chi tiết người dùng</h4>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary me-2">
                <i class="fas fa-edit me-1"></i> Chỉnh sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-list me-1"></i> Quay lại danh sách
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4 text-center">
                    <img src="~/assets/img/team/@Model.ProfileImage" class="img-thumbnail rounded mb-3"
                         style="max-height: 200px; object-fit: cover;" />
                </div>
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Họ tên</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Tên đăng nhập</dt>
                        <dd class="col-sm-8">@Model.Username</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Số điện thoại</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4">Địa chỉ</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Mật khẩu (hash)</dt>
                        <dd class="col-sm-8 text-muted small">@Model.PasswordHash</dd>

                        <dt class="col-sm-4">Trạng thái</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Ngưng hoạt động</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Ngày tạo</dt>
                        <dd class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Quyền</dt>
                        <dd class="col-sm-8">@Model.Role?.RoleName</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
