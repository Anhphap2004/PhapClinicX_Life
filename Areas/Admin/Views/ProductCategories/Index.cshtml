@model IEnumerable<PhapClinicX.Models.ProductCategory>
@{
    ViewData["Title"] = "Quản lý danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="m-0">Danh mục sản phẩm</h4>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm mới
        </a>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr class="bg-light">
                            <th scope="col" class="ps-3">STT</th>
                            <th scope="col">Tên danh mục</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-3">@(index++)</td>
                                <td>
                                    @item.CategoryName
                                </td>
                                <td>
                                    <span class="badge @(item.IsActive == true ? "bg-success" : "bg-danger") text-white">
                                        @(item.IsActive == true ? "Hiển Thị" : "Ẩn")
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                     
                                        <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table > :not(caption) > * > * {
        padding: 0.75rem 0.5rem;
        vertical-align: middle;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .badge {
        font-weight: normal;
        padding: 0.35em 0.65em;
    }
</style>