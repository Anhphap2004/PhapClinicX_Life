@model IEnumerable<PhapClinicX.Models.Role>

@{
    ViewData["Title"] = "Danh sách vai trò";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary m-0">
            <i class="fas fa-user-shield me-2"></i> Danh sách vai trò
        </h4>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Thêm vai trò mới
        </a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>STT</th>
                <th>Tên vai trò</th>
                <th>Mô tả</th>
                <th class="text-center" style="width: 160px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var role in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@role.RoleName</td>
                        <td>@role.Description</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-sm btn-warning me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">Không có vai trò nào được tìm thấy.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
