@model IEnumerable<PhapClinicX.Models.Blog>

<div class="container my-4">
    <!-- Tiêu đề -->
    <div class="bg-white p-4 rounded shadow-sm">
        <h3 class="fw-bold d-flex align-items-center gap-2">
            <span class="d-inline-block bg-primary rounded" style="width: 4px; height: 20px;"></span> Danh sách bài viết
        </h3>

        <!-- Danh sách bài viết -->
        <div class="row g-3" id="blogContainer">
            @foreach (var p in Model)
            {
                string url = $"/blog/{p.BlogId}.html";
                <div class="col-md-4 blog-item" data-category="@p.Category?.Alias">
                    <div class="card border-0 shadow-sm h-100">
                        <img src="~/assets/img/blogs/@p.Image" class="card-img-top" alt="@p.Title" style="height: 180px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <a href="@url" class="fw-semibold text-dark text-decoration-none h6 mb-2">
                                @p.Title
                            </a>
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div class="d-flex align-items-center gap-2 text-muted">
                                    <div class="bg-light text-primary rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 24px; height: 24px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <span>@p.Author?.FullName</span>
                                </div>
                                <small class="text-muted">@p.CreatedAt?.ToString("dd/MM/yyyy")</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

