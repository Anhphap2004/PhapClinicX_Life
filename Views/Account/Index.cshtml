@model PhapClinicX.Models.ViewModels.AccountDashboardViewModel
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Thông Tin Người Dùng";
    var userid = Context.Session.GetInt32("UserId");
    var username = Context.Session.GetString("Username");
    var avatar = Context.Session.GetString("ProfileImage") ?? "default-avatar.jpg";
    var email = Context.Session.GetString("Email") ?? "example@gmail.com";
    var user = Model.User;
    List<DoctorAppointment> Upcoming = Model.UpcomingDoctorAppointments ?? new List<DoctorAppointment>();
    List<DoctorAppointment> Past = Model.PastDoctorAppointments ?? new List<DoctorAppointment>();
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Thẻ chính cho hồ sơ -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <!-- Header với gradient -->
                <div class="card-header bg-gradient p-4 position-relative" style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                    <div class="d-flex align-items-center">
                        <div class="position-relative me-4">
                            <img src="~/assets/img/team/@avatar" alt="Avatar"
                                 class="rounded-circle profile-image"
                                 style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #ffffff;">
                            <div class="upload-overlay">
                                <label for="profile-upload" class="upload-button">
                                    <i class="fas fa-camera"></i>
                                </label>
                                <input type="file" id="profile-upload" class="d-none">
                            </div>
                        </div>
                        <div class="text-dark">
                            <h3 class="fw-bold mb-1">@username</h3>
                            <p class="mb-0 d-flex align-items-center">
                                <i class="fas fa-envelope me-2"></i>@email
                            </p>
                            <div class="badge bg-white text-primary mt-2">Thành viên thường</div>
                        </div>
                    </div>
                </div>

                <!-- Tabs điều hướng -->
                <div class="profile-tabs">
                    <ul class="nav nav-pills nav-fill" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="info-tab" data-bs-toggle="tab" data-bs-target="#info" type="button" role="tab">
                                <i class="fas fa-user-circle me-2"></i>Thông tin cá nhân
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity" type="button" role="tab">
                                <i class="fas fa-chart-line me-2"></i>Hoạt động gần đây
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="appointments-tab" data-bs-toggle="tab" data-bs-target="#appointments" type="button" role="tab">
                                <i class="fas fa-calendar-check me-2"></i>Lịch hẹn
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings" type="button" role="tab">
                                <i class="fas fa-cog me-2"></i>Cài đặt
                            </button>
                        </li>
                    </ul>
                </div>

                <!-- Nội dung tabs -->
                <div class="tab-content p-4" id="profileTabsContent">
                    <!-- Tab thông tin cá nhân -->
                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <form id="profileForm" asp-action="UpdateProfile" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="User.UserId" />

                            <!-- Thông tin cơ bản -->
                            <div class="card border-0 rounded-4 shadow-sm mb-4">
                                <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 fw-bold text-primary">
                                        <i class="fas fa-user me-2"></i>Thông tin cơ bản
                                    </h5>
                                    <button type="button" class="btn btn-sm btn-primary" onclick="toggleEdit('basicInfo')">
                                        <i class="fas fa-edit"></i> Chỉnh sửa
                                    </button>
                                </div>
                                <div class="card-body" id="basicInfo">
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <strong class="text-muted">Họ và tên</strong>
                                        </div>
                                        <div class="col-md-8">
                                            <span class="view-mode">@user.FullName</span>
                                            <input type="text" class="form-control edit-mode d-none" asp-for="User.FullName" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <strong class="text-muted">Username</strong>
                                        </div>
                                        <div class="col-md-8">
                                            <span class="view-mode">@("@" + user.Username)</span>
                                            <input type="text" class="form-control edit-mode d-none" asp-for="User.Username" required />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <strong class="text-muted">Email</strong>
                                        </div>
                                        <div class="col-md-8">
                                            <span class="view-mode">@user.Email</span>
                                            <input type="email" class="form-control edit-mode d-none" asp-for="User.Email" />
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <strong class="text-muted">Số điện thoại</strong>
                                        </div>
                                        <div class="col-md-8">
                                            <span class="view-mode">@user.Phone</span>
                                            <input type="tel" class="form-control edit-mode d-none" asp-for="User.Phone" />
                                        </div>
                                    </div>
                                    <div class="edit-mode d-none mt-3">
                                        <button type="button" class="btn btn-success" onclick="saveSection('basicInfo')">
                                            <i class="fas fa-save"></i> Lưu
                                        </button>
                                        <button type="button" class="btn btn-secondary" onclick="cancelEdit('basicInfo')">
                                            <i class="fas fa-times"></i> Hủy
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Thông tin liên hệ -->
                            <div class="card border-0 rounded-4 shadow-sm">
                                <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 fw-bold text-primary">
                                        <i class="fas fa-map-marker-alt me-2"></i>Thông tin liên hệ
                                    </h5>
                                    <button type="button" class="btn btn-sm btn-primary" onclick="toggleEdit('contactInfo')">
                                        <i class="fas fa-edit"></i> Chỉnh sửa
                                    </button>
                                </div>
                                <div class="card-body" id="contactInfo">
                                    <div class="row mb-3">
                                        <div class="col-md-4">
                                            <strong class="text-muted">Địa chỉ</strong>
                                        </div>
                                        <div class="col-md-8">
                                            <span class="view-mode">@user.Address</span>
                                            <textarea class="form-control edit-mode d-none" asp-for="User.Address" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="edit-mode d-none mt-3">
                                        <button type="button" class="btn btn-success" onclick="saveSection('contactInfo')">
                                            <i class="fas fa-save"></i> Lưu
                                        </button>
                                        <button type="button" class="btn btn-secondary" onclick="cancelEdit('contactInfo')">
                                            <i class="fas fa-times"></i> Hủy
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Tab hoạt động gần đây -->
                    <div class="tab-pane fade" id="activity" role="tabpanel">
                        <div class="card border-0 rounded-4 shadow-sm">
                            <div class="card-header bg-light py-3">
                                <h5 class="mb-0 fw-bold text-primary">
                                    <i class="fas fa-history me-2"></i>Hoạt động gần đây
                                </h5>
                            </div>
                            <div class="card-body p-0">
                                <div class="timeline-container">
                                    <div class="timeline-item">
                                        <div class="timeline-icon bg-primary">
                                            <i class="fas fa-calendar-check text-white"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h6 class="fw-bold mb-1">Đặt lịch khám</h6>
                                            <p class="text-muted mb-0">Bạn đã đặt lịch khám với Bác sĩ Nguyễn Văn A</p>
                                            <small class="text-muted">2 giờ trước</small>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-icon bg-info">
                                            <i class="fas fa-sign-in-alt text-white"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h6 class="fw-bold mb-1">Đăng nhập vào hệ thống</h6>
                                            <p class="text-muted mb-0">Đăng nhập thành công từ thiết bị mới</p>
                                            <small class="text-muted">Hôm nay, 9:30</small>
                                        </div>
                                    </div>
                                    <div class="timeline-item">
                                        <div class="timeline-icon bg-success">
                                            <i class="fas fa-file-medical text-white"></i>
                                        </div>
                                        <div class="timeline-content">
                                            <h6 class="fw-bold mb-1">Xem kết quả xét nghiệm</h6>
                                            <p class="text-muted mb-0">Bạn đã xem kết quả xét nghiệm máu</p>
                                            <small class="text-muted">Hôm qua, 15:45</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-white text-center">
                                <button class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-sync-alt me-1"></i>Xem thêm
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Tab lịch hẹn -->
                    <div class="tab-pane fade" id="appointments" role="tabpanel">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="fw-bold text-primary mb-0">Lịch hẹn của bạn</h5>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i>Đặt lịch mới
                            </a>
                        </div>

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <div class="card border-0 rounded-4 shadow-sm mb-4">
                            <div class="card-header bg-light py-3">
                                <h6 class="mb-0 fw-bold text-primary">
                                    <i class="fas fa-calendar me-2"></i>Lịch hẹn sắp tới
                                </h6>
                            </div>
                            <div class="card-body p-0">
                                @if (Upcoming.Any())
                                {
                                    @foreach (var p in Upcoming)
                                    {
                                        <div class="appointment-item d-flex align-items-center justify-content-between border-bottom px-3 py-3">
                                            <div class="appointment-date text-center me-3">
                                                <span class="month">Tháng @p.DateTime?.Month</span><br />
                                                <span class="day fs-3 fw-bold">@p.DateTime?.Day</span><br />
                                                <span class="time">@p.DateTime?.ToString("HH:mm")</span>
                                            </div>
                                            <div class="appointment-info flex-grow-1">
                                                <h6 class="fw-bold mb-1">Khám tổng quát</h6>
                                                <p class="text-muted mb-0"><i class="fas fa-user-md me-1"></i>Bác sĩ: @p.Doctor?.Fullname</p>
                                                <p class="text-muted mb-0"><i class="fas fa-clinic-medical me-1"></i>Phòng: @p.Doctor?.PhongKham?.TenPhongKham</p>
                                            </div>
                                            <div class="appointment-action d-flex flex-column" style="min-width: 110px;">
                                                <span class="badge @(p.Status ? "bg-success" : "bg-warning text-dark") mb-2">@(p.Status ? "Đã xác nhận" : "Chờ xác nhận")</span>
                                                <form method="post" asp-controller="Booking" asp-action="cancelAppointment" asp-route-id="@p.AppointmentId" onsubmit="return confirm('Bạn có chắc muốn hủy lịch này không?');">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                                                        <i class="fas fa-times-circle me-1"></i>Hủy lịch
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center py-5">
                                        <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">Chưa có lịch hẹn nào</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="card border-0 rounded-4 shadow-sm mb-4">
                            <div class="card-header bg-light py-3">
                                <h6 class="mb-0 fw-bold text-primary">
                                    <i class="fas fa-history me-2"></i>Lịch hẹn đã qua / đã hủy
                                </h6>
                            </div>
                            <div class="card-body p-0">
                                @if (Past.Any())
                                {
                                    @foreach (var p in Past)
                                    {
                                        <div class="appointment-item d-flex align-items-center justify-content-between border-bottom px-3 py-3">
                                            <div class="appointment-date text-center me-3">
                                                <span class="month">Tháng @p.DateTime?.Month</span><br />
                                                <span class="day fs-3 fw-bold">@p.DateTime?.Day</span><br />
                                                <span class="time">@p.DateTime?.ToString("HH:mm")</span>
                                            </div>
                                            <div class="appointment-info flex-grow-1">
                                                <h6 class="fw-bold mb-1">Khám tổng quát</h6>
                                                <p class="text-muted mb-0"><i class="fas fa-user-md me-1"></i>Bác sĩ: @p.Doctor?.Fullname</p>
                                                <p class="text-muted mb-0"><i class="fas fa-clinic-medical me-1"></i>Phòng: @p.Doctor?.PhongKham?.TenPhongKham</p>
                                            </div>
                                            <div class="appointment-action d-flex flex-column" style="min-width: 140px;">
                                                <span class="badge @(p.Status ? "bg-secondary" : "bg-danger") mb-2">
                                                    @(p.Status ? "Đã kết thúc" : "Đã hủy")
                                                </span>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="text-center py-4">
                                        <p class="text-muted mb-0">Chưa có lịch hẹn cũ</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Tab cài đặt -->
                    <div class="tab-pane fade" id="settings" role="tabpanel">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="card border-0 rounded-4 shadow-sm mb-4">
                                    <div class="card-header bg-light py-3">
                                        <h5 class="mb-0 fw-bold text-primary">
                                            <i class="fas fa-shield-alt me-2"></i>Bảo mật tài khoản
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="setting-item d-flex justify-content-between align-items-center mb-3">
                                            <div>
                                                <h6 class="fw-bold mb-1">Đổi mật khẩu</h6>
                                                <small class="text-muted">Cập nhật mật khẩu của bạn</small>
                                            </div>
                                            <button class="btn btn-sm btn-primary">
                                                <i class="fas fa-key me-1"></i>Cập nhật
                                            </button>
                                        </div>
                                        <div class="setting-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="fw-bold mb-1">Xác thực hai yếu tố</h6>
                                                <small class="text-muted">Bảo mật tài khoản với xác thực hai lớp</small>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="2faSwitch">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="card border-0 rounded-4 shadow-sm mb-4">
                                    <div class="card-header bg-light py-3">
                                        <h5 class="mb-0 fw-bold text-primary">
                                            <i class="fas fa-bell me-2"></i>Cài đặt thông báo
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="setting-item d-flex justify-content-between align-items-center mb-3">
                                            <div>
                                                <h6 class="fw-bold mb-1">Thông báo về lịch hẹn</h6>
                                                <small class="text-muted">Nhận thông báo về lịch hẹn sắp tới</small>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" checked>
                                            </div>
                                        </div>
                                        <div class="setting-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="fw-bold mb-1">Thông báo qua email</h6>
                                                <small class="text-muted">Nhận thông báo qua email</small>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" checked>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .rounded-4 {
        border-radius: 0.75rem;
    }

    .btn {
        border-radius: 0.5rem;
        transition: all 0.3s ease;
    }

    .bg-primary {
        background-color: #2575fc !important;
    }

    .text-primary {
        color: #2575fc !important;
    }

    .btn-primary {
        background-color: #2575fc;
        border-color: #2575fc;
    }

        .btn-primary:hover {
            background-color: #1a68e5;
            border-color: #1a68e5;
        }

    .profile-image {
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

    .upload-overlay {
        position: absolute;
        bottom: 0;
        right: 0;
    }

    .upload-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        background-color: #2575fc;
        color: white;
        border-radius: 50%;
        border: 2px solid white;
        cursor: pointer;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }

    .profile-tabs {
        background-color: #f8f9fa;
        padding: 1rem;
        border-bottom: 1px solid #e9ecef;
    }

        .profile-tabs .nav-link {
            border-radius: 0.5rem;
            color: #6c757d;
            font-weight: 500;
            padding: 0.75rem 1rem;
        }

            .profile-tabs .nav-link.active {
                background-color: #2575fc;
                color: white;
            }

    .card {
        border: none;
        box-shadow: 0 0 20px rgba(0,0,0,0.08);
    }

    .card-header {
        background-color: #f8f9fa;
        border-bottom: 2px solid #e9ecef;
    }

    .edit-mode input, .edit-mode textarea {
        border: 2px solid #2575fc;
    }

    .timeline-container {
        position: relative;
        padding: 1rem;
    }

    .timeline-item {
        display: flex;
        position: relative;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-left: 2px solid #e9ecef;
        padding-left: 1.5rem;
    }

        .timeline-item:last-child {
            margin-bottom: 0;
            padding-bottom: 0;
            border-left-color: transparent;
        }

    .timeline-icon {
        position: absolute;
        left: -18px;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #2575fc;
        box-shadow: 0 0 0 4px #f8f9fa;
    }

