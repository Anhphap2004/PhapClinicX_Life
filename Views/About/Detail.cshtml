@model PhapClinicX.Models.PhongKham

    <div class="container mt-5">
        <!-- Tiêu đề trang -->
        <div class="text-center">
            <h2>Chi Tiết Phòng Khám</h2>
            <p class="text-muted">Thông tin chi tiết về phòng khám</p>
        </div>

        <div class="row">
            <!-- Cột bên trái: Thông tin phòng khám -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="text-white">Thông Tin Phòng Khám</h4>
                    </div>
                    <div class="card-body">
                        <p><strong>Tên phòng khám:</strong> Phòng Khám @Model.TenPhongKham</p>
                        <p><strong>Địa chỉ:</strong> @Model.DiaChi</p>
                        <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Mô tả:</strong>@Html.Raw(Model.Introduce) </p>
                    </div>
                </div>

                <!-- Thêm một bảng chi tiết khác nếu cần -->
                <div class="card mb-4">
                    <div class="card-header bg-warning text-white">
                        <h4>Giờ Làm Việc</h4>
                    </div>
                    <div class="card-body">
                        <p><strong>Thứ Hai - Thứ Sáu:</strong> 08:00 - 17:00</p>
                        <p><strong>Thứ Bảy:</strong> 08:00 - 12:00</p>
                        <p><strong>Chủ Nhật:</strong> Nghỉ</p>
                    </div>
                </div>
            </div>

            <!-- Cột bên phải: Ảnh phòng khám -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                    <h4 class="text-white">Ảnh Phòng Khám</h4>
                    </div>
                    <div class="card-body text-center">
                        <img src="~/assets/img/clinicbranch/@Model.Image" alt="Ảnh phòng khám" class="img-fluid rounded">
                    </div>
                </div>
            </div>
        </div>

        <!-- Bảng các dịch vụ -->
        <div class="mt-5">
            <h3 class="text-center">Các Dịch Vụ Cung Cấp</h3>
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Dịch Vụ</th>
                        <th scope="col">Giá</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Khám tổng quát</td>
                        <td>500.000 VND</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Khám chuyên khoa</td>
                        <td>700.000 VND</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Xét nghiệm máu</td>
                        <td>200.000 VND</td>
                    </tr>
                </tbody>
            </table>
        </div>
</div>