@model IEnumerable<PhapClinicX.Models.Product>
@using System.Globalization;
@{
    List<ProductCategory> ProductCategories = ViewBag.ProductCategories;
    var culture = new CultureInfo("vi-VN");
    List<Product> ProductNew = ViewBag.ProductNew;
}



<!-- Banner -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <img src="~/assets/img/banner/giamgia.png" class="img-fluid rounded" alt="Banner chính">
        </div>
        <div class="col-md-4 d-flex flex-column gap-3">
            <img src="~/assets/img/banner/2.png" class="img-fluid rounded" alt="Banner phụ 1">
            <img src="~/assets/img/banner/4.png" class="img-fluid rounded" alt="Banner phụ 2">
        </div>
    </div>
</div>

<!-- Category Icons Section -->
<div class="container my-5">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h4 class="fw-bold mb-0">Danh mục sản phẩm</h4>
        </div>
        <div class="col-md-6 text-md-end">
            <a href="#" class="text-decoration-none">Xem tất cả <i class="fas fa-arrow-right ms-1"></i></a>
        </div>
    </div>

    <div class="row text-center g-4 justify-content-center">
        <div class="col-6 col-md-4 col-lg-2">
            <div class="card h-100 rounded-4 border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                    <div class="bg-light rounded-circle p-3 mb-3">
                        <img src="https://youmedstore.vn/media/wysiwyg/icons/H_nh_h_tr_h_h_p.jpg" alt="Hô hấp" class="img-fluid" style="width: 60px; height: 60px;">
                    </div>
                    <p class="mb-0 fw-medium">Hỗ trợ hô hấp</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <div class="card h-100 rounded-4 border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                    <div class="bg-light rounded-circle p-3 mb-3">
                        <img src="https://youmedstore.vn/media/wysiwyg/icons/H_nh_h_tr_h_h_p.jpg" alt="Dinh dưỡng" class="img-fluid" style="width: 60px; height: 60px;">
                    </div>
                    <p class="mb-0 fw-medium">Dinh dưỡng</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <div class="card h-100 rounded-4 border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                    <div class="bg-light rounded-circle p-3 mb-3">
                        <img src="https://youmedstore.vn/media/wysiwyg/icons/H_nh_h_tr_h_h_p.jpg" alt="Làm đẹp" class="img-fluid" style="width: 60px; height: 60px;">
                    </div>
                    <p class="mb-0 fw-medium">Hỗ trợ làm đẹp</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <div class="card h-100 rounded-4 border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                    <div class="bg-light rounded-circle p-3 mb-3">
                        <img src="https://youmedstore.vn/media/wysiwyg/icons/H_nh_h_tr_h_h_p.jpg" alt="Tiêu hóa" class="img-fluid" style="width: 60px; height: 60px;">
                    </div>
                    <p class="mb-0 fw-medium">Hỗ trợ tiêu hóa</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <div class="card h-100 rounded-4 border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                    <div class="bg-light rounded-circle p-3 mb-3">
                        <img src="https://youmedstore.vn/media/wysiwyg/icons/H_nh_h_tr_h_h_p.jpg" alt="Trẻ nhỏ" class="img-fluid" style="width: 60px; height: 60px;">
                    </div>
                    <p class="mb-0 fw-medium">Phát triển trẻ nhỏ</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2">
            <div class="card h-100 rounded-4 border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center py-4">
                    <div class="bg-light rounded-circle p-3 mb-3">
                        <img src="https://youmedstore.vn/media/wysiwyg/icons/H_nh_h_tr_h_h_p.jpg" alt="Vitamin" class="img-fluid" style="width: 60px; height: 60px;">
                    </div>
                    <p class="mb-0 fw-medium">Vitamin - Khoáng chất</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Products Section -->
<div class="container my-5">
    <div class="row g-4">
        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="card rounded-4 border-0 shadow-sm sticky-lg-top" style="top: 20px; z-index: 1020;">
                <div class="card-body p-4">
                    <h5 class="card-title border-bottom pb-3 mb-3 fw-bold text-primary">Danh Mục</h5>
                    <div class="list-group list-group-flush">
                        <!-- Hiển thị danh mục 'Tất cả sản phẩm' -->
                        <a href="@Url.Action("Index", "Products")"
                           class="list-group-item list-group-item-action border-0 px-2 py-2 rounded-3 mb-1 fw-bold">
                            <i class="fas fa-list me-2 text-primary small"></i>
                            Tất cả sản phẩm
                        </a>

                        <!-- Hiển thị tất cả danh mục từ ProductCategories -->
                        @foreach (var category in ProductCategories)
                        {
                            <a href="@Url.Action("Index", "Products", new { categoryId = category.CategoryId })"
                               class="list-group-item list-group-item-action border-0 px-2 py-2 rounded-3 mb-1">
                                <i class="fas fa-angle-right me-2 text-primary small"></i>
                                @category.CategoryName
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>


        <!-- Products Container -->
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-3 p-md-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0 fw-bold">Sản phẩm nổi bật</h5>
                        <div class="d-flex gap-2">
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    Sắp xếp
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                                    <li><a class="dropdown-item" href="#">Giá: Cao đến thấp</a></li>
                                    <li><a class="dropdown-item" href="#">Giá: Thấp đến cao</a></li>
                                    <li><a class="dropdown-item" href="#">Bán chạy nhất</a></li>
                                </ul>
                            </div>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-th-large"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-list"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 row-cols-xl-4 g-4">
                        @foreach (var item in Model)
                        {
                            string url = $"/san-pham/{item.Alias}-{item.ProductId}.html";
                            <div class="col">
                                <div class="card h-100 rounded-4 border-0 shadow-sm position-relative product-card">
                                    @if (item.PriceSale.HasValue && item.PriceSale.Value < item.Price)
                                    {
                                        <div class="position-absolute top-0 start-0 bg-danger text-white px-2 py-1 m-2 rounded-pill fs-7">
                                            -@(Math.Round((1 - (item.PriceSale.Value / item.Price)) * 100))%
                                        </div>
                                    }
                                    <div class="text-center p-3">
                                        <a href="@url" class="d-block overflow-hidden">
                                            <img src="~/assets/img/product/@item.Image" alt="@item.ProductName"
                                                 class="img-fluid product-img" style="height: 180px; object-fit: contain; transition: transform 0.3s;">
                                        </a>
                                    </div>
                                    <div class="card-body d-flex flex-column p-3">
                                        <a href="@url" class="text-decoration-none">
                                            <h6 class="card-title text-dark overflow-hidden mb-3" style="height: 40px; line-height: 1.4;">
                                                @item.ProductName
                                            </h6>
                                        </a>
                                        <div class="d-flex align-items-center gap-2 mb-2">
                                            @if (item.PriceSale.HasValue && item.PriceSale.Value < item.Price)
                                            {
                                                <span class="fw-bold text-danger fs-5">
                                                    @item.PriceSale?.ToString("N0")đ
                                                </span>
                                                <span class="text-muted text-decoration-line-through fs-6">
                                                    @item.Price.ToString("N0")đ
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-danger fs-5">
                                                    @item.Price.ToString("N0")đ
                                                </span>
                                            }
                                        </div>

                                        <div>
                                            <small class="text-muted d-block mb-1">Xuất xứ: Việt Nam</small>
                                            <small class="text-muted d-block mb-3">Đã bán: @item.ProductSold</small>
                                        </div>
                                        <div class="mb-3">
                                            @for (int i = 0; i < item.Star; i++)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
    
                                        </div>
                                        <div class="d-grid gap-2 mt-auto">
                                            <button class="btn btn-primary fw-medium rounded-3">
                                                <i class="fas fa-cart-plus me-2"></i>Thêm vào giỏ
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <nav class="mt-5" aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, categoryID = ViewBag.SelectedCategoryID })">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, categoryID = ViewBag.SelectedCategoryID })">@i</a>
                                </li>
                            }

                            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, categoryID = ViewBag.SelectedCategoryID })">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Custom utility class for font size */
    .fs-7 {
        font-size: 0.85rem !important;
    }

    /* Hover effects for category cards */
    .card.product-card:hover {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        transform: translateY(-3px);
        transition: all 0.3s ease;
    }

        .card.product-card:hover .product-img {
            transform: scale(1.05);
        }

    /* List group hover effect */
    .list-group-item-action:hover {
        background-color: rgba(13, 110, 253, 0.05);
    }

    /* Custom hover for buttons */
    .btn-primary {
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);
        }
</style>
<!-- Hot Deals Section -->
<div class="container mt-5 mb-5">
    <div class="bg-light p-4 p-md-5 rounded-3">
        <h2 class="mb-4 text-center text-uppercase fw-bold text-danger">
            <i class="fas fa-fire"></i> Hotdeal Mới Nhất <i class="fas fa-fire"></i>
        </h2>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-5 g-4">
            @foreach (var p in ProductNew)
            {
                string url = $"/san-pham/{p.Alias}-{p.ProductId}.html";
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-3 position-relative">
                        @if (p.PriceSale.HasValue && p.PriceSale.Value < p.Price)
                        {
                            <div class="position-absolute top-0 start-0 bg-danger text-white px-2 py-1 rounded-end">
                                <i class="fas fa-tags"></i> Giảm @(Math.Round((1 - (p.PriceSale.Value / p.Price)) * 100))%
                            </div>
                            <div class="position-absolute top-0 end-0 me-2 mt-2">
                                <img src="~/assets/img/logo/phaplife.png" alt="Logo" style="width: 60px; height: auto;">
                            </div>
                        }
                        <img src="~/assets/img/product/@p.Image" class="card-img-top"
                             style="height: 200px; object-fit: cover;" alt="@p.ProductName">
                        <div class="card-body d-flex flex-column text-center">
                            <a href="@url" class="text-decoration-none">
                                <h5 class="card-title mb-3">@p.ProductName</h5>
                            </a>
                            <p class="small text-success mb-1">
                                <i class="fas fa-shield-alt"></i> Bảo hành: <strong>@p.Warranty</strong> tháng
                            </p>
                            <p class="small text-secondary mb-2">
                                <i class="fas fa-shopping-bag"></i> Đã bán: <strong>@p.ProductSold</strong> sản phẩm
                            </p>
                            <p class="text-danger fw-bold mb-3">
                                @if (p.PriceSale.HasValue && p.PriceSale.Value < p.Price)
                                {
                                    <span>@p.PriceSale.Value.ToString("N0", culture)đ</span>
                                    <small class="text-decoration-line-through text-muted ms-2">
                                        @p.Price.ToString("N0", culture)đ
                                    </small>
                                }
                                else
                                {
                                    <span>@p.Price.ToString("N0", culture)đ</span>
                                }
                            </p>
                            <button class="btn btn-danger w-100 fw-bold mt-auto">
                                <i class="fas fa-cart-plus"></i> Thêm vào giỏ
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>