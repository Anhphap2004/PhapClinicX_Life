                                    @for (var i = 0; i < p.Star; i++)
                                    {
                                        <i class="fas fa-star text-warning" style="font-size: 18px;"></i>
                                    }
                                    @for (var i = p.Star; i < 5; i++)
                                    {
                                        <i class="far fa-star text-warning" style="font-size: 18px;"></i>
                                    }
                                </div>

